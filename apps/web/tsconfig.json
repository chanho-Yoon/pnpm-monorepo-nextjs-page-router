{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"],
      "@/*": ["src/*"],
      "@packages/types/*": ["../../packages/types/*"],
      "@svgs/*": ["public/svgs/*"],
    },
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
